common:
	php:
		date.timezone: Europe/Prague
		# zlib.output_compression: yes

	nette:
		application:
			errorPresenter: Front:Error

		session:
			expiration: 1 month

		security:
			debugger: true  # panel v Debugger baru
			users: %users%

		#database:
		#	dsn: 'mysql:host=localhost;dbname=casopisy'
		#	user: 'root'
		#	password:


	services:
	factories:
	parameters:
		casopisy: ['Světýlko', 'Skaut', 'Skauting', 'Kmen', 'Svět']
		casopisyLong: ['Světýlko', 'Skaut', 'Skauting', 'Roverský kmen', 'Skautský svět']
		staticDir: %wwwDir%/static
		dataDir:   %wwwDir%/data
		users:


		database:
			host: localhost
			driver: mysqli
			database: casopisy
			username: root
			password:
			profiler:
				run: false
				file: %appDir%/log/dibi.log


production < common:


development < common:
	parameters:
		database:
			profiler: true
